<!-- üîê AUTH + FIRESTORE -->
<script type="module">
import { auth, db } from "./firebase.js";
import { onAuthStateChanged, signOut }
  from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";
import { doc, getDoc }
  from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";

document.getElementById("logoutBtn").onclick = async ()=>{
  try{ await signOut(auth); }catch(e){}
  location.href="index.html";
};

function go(url){
  if(!auth.currentUser){
    location.href="login.html";
    return;
  }
  location.href=url;
}

btnTele.onclick = ()=>go("demande-teleconsultation.html");
btnHome.onclick = ()=>go("demande-aide-domicile.html");

onAuthStateChanged(auth, async(user)=>{
  if(!user){ location.href="login.html"; return; }

  const snap = await getDoc(doc(db,"patients",user.uid));
  if(!snap.exists()) return;

  const p = snap.data();

  fullName.innerText = p.fullName || "‚Äî";
  age.innerText = p.age ? p.age+" ans" : "‚Äî";
  gender.innerText = p.gender || "‚Äî";
  province.innerText = p.province || "‚Äî";
  patientId.innerText = p.patientId || "‚Äî";

  if(!p.age || !p.gender || !p.province){
    document.getElementById("profileMissing").style.display="block";
  }
});
</script>

