<!DOCTYPE html>
<html lang="fr">
<head>
<meta charset="UTF-8">
<title>CizaHealth+ | Accueil</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<style>
:root{
  --blue:#123c8a;
  --blue-soft:#f1f5fc;

  --green-soft:#f0f8f4;
  --green:#3b8f6b;

  --purple-soft:#f4f2fb;
  --purple:#6b5ca8;

  --text:#0a1a2f;
  --muted:#6b7a90;
  --bg:#f4f7fb;

  --radius:24px;
}

*{box-sizing:border-box}

body{
  margin:0;
  font-family:-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Inter;
  background:linear-gradient(180deg,#f4f7fb,#eef3fa);
  color:var(--text);
}

.app{
  max-width:430px;
  margin:auto;
  min-height:100vh;
  background:#fff;
  box-shadow:0 12px 50px rgba(10,42,94,.08);
}

/* TOP BAR */
.topbar{
  padding:18px 22px;
  display:flex;
  justify-content:space-between;
  align-items:center;
}
.menu-btn{
  font-size:22px;
  cursor:pointer;
  color:var(--blue);
}

/* MENU */
.menu{
  display:none;
  padding:16px 22px 22px;
  background:#fff;
  border-bottom:1px solid #eef1f6;
}
.menu a{
  display:block;
  padding:12px 0;
  text-decoration:none;
  color:var(--blue);
  font-weight:500;
}
.menu a.logout{
  color:#8a1f1f;
  font-weight:600;
}
.menu-separator{
  margin:14px 0;
  height:1px;
  background:#e6ebf5;
}
.menu-pro{font-weight:600}
.menu-admin{font-weight:600;color:#8a1f1f}

/* LOGO */
.logo{
  text-align:center;
  padding:22px 20px 10px;
}
.logo img{height:108px}

/* HERO */
.hero{
  text-align:center;
  padding:24px 30px 16px;
}
.hero h1{
  font-size:22px;
  line-height:1.45;
  margin:6px 0 10px;
  font-weight:600;
}
.hero p{
  font-size:14.5px;
  color:var(--muted);
  margin:0;
}

/* SERVICES */
.services{
  padding:26px;
  display:grid;
  gap:22px;
}

/* CARD */
.service-card{
  position:relative;
  border-radius:var(--radius);
  padding:26px 22px 22px;
  text-decoration:none;
  color:var(--text);
  transition:.3s ease;
  box-shadow:0 10px 28px rgba(10,42,94,.08);
}
.service-card:hover{
  transform:translateY(-3px);
  box-shadow:0 18px 44px rgba(10,42,94,.14);
}
.service-card::before{
  content:"";
  position:absolute;
  left:0;
  top:18px;
  bottom:18px;
  width:4px;
  border-radius:4px;
}

/* COULEURS */
.tele{
  background:linear-gradient(180deg,var(--blue-soft),#fff);
}
.tele::before{background:var(--blue)}

.home{
  background:linear-gradient(180deg,var(--green-soft),#fff);
}
.home::before{background:var(--green)}

.pharma{
  background:linear-gradient(180deg,var(--purple-soft),#fff);
}
.pharma::before{background:var(--purple)}

/* ICONS */
.icon-box{
  width:52px;
  height:52px;
  border-radius:14px;
  display:flex;
  align-items:center;
  justify-content:center;
  margin-bottom:12px;
}
.tele .icon-box{background:rgba(18,60,138,.1)}
.home .icon-box{background:rgba(59,143,107,.1)}
.pharma .icon-box{background:rgba(107,92,168,.1)}

svg{width:26px;height:26px}

/* TEXT */
.service-card strong{
  font-size:16px;
  font-weight:600;
}
.service-card span{
  display:block;
  font-size:13px;
  margin-top:6px;
  color:var(--muted);
}

/* FOOTER */
.footer-health{
  background:linear-gradient(180deg,#0b1f44,#071733);
  color:#e6ebff;
  padding:50px 28px 36px;
}
.footer-grid{
  display:grid;
  gap:26px;
}
.footer-health h4{
  margin-bottom:10px;
  font-size:14px;
  font-weight:600;
}
.footer-health a{
  color:#cfd8ff;
  text-decoration:none;
  font-size:13px;
  line-height:2;
}
.footer-health a.danger{color:#ffb3b3}
.footer-disclaimer{
  margin-top:22px;
  padding-top:16px;
  border-top:1px solid rgba(255,255,255,.15);
  font-size:12px;
  text-align:center;
}
.footer-bottom{
  margin-top:14px;
  font-size:11.5px;
  opacity:.75;
  text-align:center;
}
</style>

<script>
function toggleMenu(){
  const menu=document.getElementById("menu");
  menu.style.display=menu.style.display==="block"?"none":"block";
}

/* Déconnexion → accueil */
function logout(){
  localStorage.removeItem("cizahealth_session");
  window.location.href="index.html";
}
</script>
</head>

<body>
<div class="app">

  <!-- TOP BAR -->
  <div class="topbar">
    <div></div>
    <div class="menu-btn" onclick="toggleMenu()">☰</div>
  </div>

  <!-- MENU -->
  <div class="menu" id="menu">
    <a href="index.html">Accueil</a>
    <a href="apropos.html">À propos</a>
    <a href="faq.html">FAQ</a>
    <a href="login.html">Connexion</a>

    <div class="menu-separator"></div>

    <a href="pro-login.html" class="menu-pro">Espace professionnel</a>
    <a href="admin-login.html" class="menu-admin">Administration</a>

    <div class="menu-separator"></div>

    <a href="#" class="logout" onclick="logout()">Déconnexion</a>
  </div>

  <!-- LOGO -->
  <div class="logo">
