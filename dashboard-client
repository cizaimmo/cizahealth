<script>
document.addEventListener("DOMContentLoaded", () => {
  const data = JSON.parse(localStorage.getItem("cizaRequest"));

  if(!data || !data.fullName){
    window.location.href = "login.html";
    return;
  }

  document.getElementById("patientName").innerText = data.fullName;
  document.getElementById("dossierNumber").innerText = data.dossierNumber || "—";
  document.getElementById("serviceType").innerText = data.serviceType || "—";
  document.getElementById("province").innerText = data.province || "—";
});
</script>
